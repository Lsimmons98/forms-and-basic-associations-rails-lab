<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.collection_select :genre_id, Genre.all, :id, :name%>

  <%= f.label :note_content %>
  <input id="song_notes_1" name="song[note_contents][]">
  <input id="song_notes_2" name="song[note_contents][]">

  <%# For the notes, don't use f.text_fields, but instead use <input>s %>
  <%# the names for each field should look like this: song[note_contents][] %>
  <%# you'll have 2 inputs, be mindful of the names and ids of each %>
  <%= f.submit 'Create Song' %>
<% end %>
